{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "createRelease": "github",
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": [
        "packages/eslint-config/**",
        "packages/react-ui-testing/**",
        "packages/react-ui-codemod/**",
        "packages/react-ui-smoke-test/**",
        "packages/react-ui-validations/**"
      ]
    }
  }
}
